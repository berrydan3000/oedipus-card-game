{
  "install": "npm install",
  "start": "node server.js",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules/**/node_modules"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "\\.js$",
        "\\.html$",
        "\\.json"
      ]
    },
    "throttle": 1000
  }
} 